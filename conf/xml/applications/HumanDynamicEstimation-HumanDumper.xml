<application>
    <name>HumanDumper</name>
    <description>Dumper for HDE modules</description>
	
	<var name="generic_node">localhost</var>

  <module>
        <name>yarpdatadumper</name>
        <parameters>--name /hde_dump/humanState --type bottle --txTime --rxTime</parameters>
        <node>${generic_node}</node>
	      <tag>yarpdatadumper</tag>
  </module>
	
		
  <module>
        <name>yarpdatadumper</name>
        <parameters>--name /hde_dump/wearable --type bottle --txTime --rxTime</parameters>
        <node>${generic_node}</node>
        <tag>yarpdatadumper</tag>
  </module>

  <module>
        <name>yarpdatadumper</name>
        <parameters>--name /hde_dump/FTshoes/left --type bottle --txTime --rxTime</parameters>
        <node>${generic_node}</node>
        <tag>yarpdatadumper</tag>
  </module>

  <module>
        <name>yarpdatadumper</name>
        <parameters>--name /hde_dump/FTshoes/right --type bottle --txTime --rxTime</parameters>
        <node>${generic_node}</node>
        <tag>yarpdatadumper</tag>
  </module>

  <module>
        <name>yarpdatadumper</name>
        <parameters>--name /hde_dump/xsens --type bottle --txTime --rxTime</parameters>
        <node>${generic_node}</node>
        <tag>yarpdatadumper</tag>
  </module>

  <module>
        <name>yarpdatadumper</name>
        <parameters>--name /hde_dump/dynamics --type bottle --txTime --rxTime</parameters>
        <node>${generic_node}</node>
        <tag>yarpdatadumper</tag>
  </module>

	
	<connection>
        <from>/HDE/HumanStateWrapper/state:o</from>
        <to>/hde_dump/humanState</to>
        <protocol>udp</protocol>
  </connection>

  <connection>
        <from>/IWearRemapper/data:o</from>
        <to>/hde_dump/wearable</to>
        <protocol>udp</protocol>
  </connection>

  <connection>
        <from>/FTShoeLeft/WearableData/data:o</from>
        <to>/hde_dump/FTshoes/left</to>
        <protocol>udp</protocol>
  </connection>

  <connection>
        <from>/FTShoeRight/WearableData/data:o</from>
        <to>/hde_dump/FTshoes/right</to>
        <protocol>udp</protocol>
  </connection>

  <connection>
        <from>/XSensSuit/WearableData/data:o</from>
        <to>/hde_dump/xsens</to>
        <protocol>udp</protocol>
  </connection>

  <connection>
        <from>/HDE/HumanDynamicsWrapper/torques:o</from>
        <to>/hde_dump/dynamics</to>
        <protocol>udp</protocol>
  </connection>


</application>
